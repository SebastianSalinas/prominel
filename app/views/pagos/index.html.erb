<p id="notice"><%= notice %></p>

<h1>Listing Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Proyecto</th>
      <th>Neto</th>
      <th>Iva</th>
      <th>Factura</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.descripcion %></td>
        <td><%= pago.proyecto %></td>
        <td><%= pago.neto %></td>
        <td><%= pago.iva %></td>
        <td><%= pago.factura %></td>
        <td><%= pago.cliente %></td>
        <td><%= link_to 'Show', pago %></td>
        <td><%= link_to 'Edit', edit_pago_path(pago) %></td>
        <td><%= link_to 'Destroy', pago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

